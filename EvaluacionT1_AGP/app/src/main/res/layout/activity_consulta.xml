<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".ConsultaActivity">

    <TextView
        android:id="@+id/strIntroCons"
        style="@style/Estilo_default_escrito"
        android:layout_marginTop="18dp"
        android:text="@string/consulta" />
    <EditText
        android:id="@+id/etpaisacons"
        style="@style/Estilo_default_edits"
        android:layout_below="@+id/strIntroCons"
        android:layout_marginEnd="140dp"
        android:layout_marginTop="20dp"
        android:hint="@string/intropais" />

    <Button
        android:id="@+id/btnSelectPrimerPais"
        style="@style/Estilo_btn_select"
        android:layout_alignRight="@+id/etpaisacons"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/strIntroCons"
        android:text="@string/seleccionar" />
</RelativeLayout>